<div>
    <ul class="publication-list">
    {% for publication in include.publications reversed %}
        {% assign paper_type = publication.paper_type | default: 'other' %}
        {% assign li_class = 'publication publication-' | append: paper_type %}

        {%- capture paper_title -%}
        {%- case paper_type -%}
        {%- when 'journal' -%}
            Journal Article
        {%- when 'conference' -%}
            Conference Paper
        {%- when 'workshop' -%}
            Workshop Paper
        {%- when 'thesis' -%}
            Thesis
        {%- when 'techreport' -%}
            Technical Report
        {%- when 'other' -%}
            Other Research Type
        {%- endcase -%}
        {%- endcapture -%}

        <li class="{{li_class}}" id="{{ publication.path | split: '/' | last | remove: '.md' }}" title="{{ paper_title }}">
            <span>
            <!-- 直接显示论文信息 -->
            <strong>{{ publication.title }}</strong><br>
            {{ publication.authors }}<br>
            <em>{{ publication.venue }}</em>, {{ publication.year }}
            
            <!-- 显示相关链接 -->
            {% if publication.url %}
             [<a href="{{ publication.url }}" target="_blank">论文链接</a>]
            {% endif %}
            
            {% if publication.first_author %}
             <span style="color: #e74c3c; font-weight: bold;">(第一作者)</span>
            {% endif %}
            </span>
        </li>
    {% endfor %}
    </ul>
</div>
