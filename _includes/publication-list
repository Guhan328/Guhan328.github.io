<div>
    <ul class="publication-list">
    {% for publication in publications reversed %}
        {% assign paper_type = publication.paper_type | default: 'other' %}
        {% assign li_class = 'publication publication-' | append: paper_type %}

        {%- capture paper_title -%}
        {%- case paper_type -%}
        {%- when 'journal' -%}
            Journal Article
        {%- when 'conference' -%}
            Conference Paper
        {%- when 'workshop' -%}
            Workshop Paper
        {%- when 'thesis' -%}
            Thesis
        {%- when 'techreport' -%}
            Technical Report
        {%- when 'other' -%}
            Other Research Type
        {%- endcase -%}
        {%- endcapture -%}

        <li class="{{li_class}}" id="{{ publication.path | split: '/' | last | remove: '.md' }}" title="{{ paper_title }}">
            <span title="">
            {{ publication.citation | markdownify | remove: "<p>" | remove: "</p>" }}

            {% if publication.file %}
              <br />
              [<a href="{{ publication.file }}"><i class="fas si-file-pdf" aria-hidden="true"></i> pdf</a>]
            {% endif %}
            </span>
        </li>
    {% endfor %}
    </ul>
</div>
